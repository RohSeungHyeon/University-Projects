<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="장부 추가"
            android:textSize="20dp"
            android:textColor="#fff6f6"
            android:gravity="center"
            android:paddingTop="4dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/omnigothic_040"/>
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtAccountBook"
            android:textSize="12dp"
            android:textColor="#2d2d2d"
            android:alpha="0.87"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/omnigothic_020" />
    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66effaff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="취소"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/popup_button_state"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClick_AB_Close"
            android:fontFamily="@font/omnigothic_030"
            android:layout_weight="1" />

        <Button
            android:text="확인"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/popup_button_state"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="onClick_AB_Add"
            android:fontFamily="@font/omnigothic_030"
            android:layout_weight="1" />

    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>